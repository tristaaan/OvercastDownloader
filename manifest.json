{
  "manifest_version": 2,
  "name": "Overcast Downloader",
  "description": "A shortcut to download the audio file from the Overcast webplayer",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Download podcast"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  }
}